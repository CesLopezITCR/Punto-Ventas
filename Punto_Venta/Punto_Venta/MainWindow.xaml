<Window x:Class="Punto_Venta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Punto_Venta"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="525" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="BtSalir" Content="Salir" HorizontalAlignment="Left" Margin="425,282,0,0" VerticalAlignment="Top" Width="75" Click="BClick_Salir"/>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="235,95,0,0" VerticalAlignment="Top"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="222,191,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TUsuario" HorizontalAlignment="Left" Height="45" Margin="160,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <PasswordBox x:Name="TPContra" HorizontalAlignment="Left" Margin="160,137,0,0" VerticalAlignment="Top" Width="200" Height="40" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <Button Content="Aceptar&#xD;&#xA;" HorizontalAlignment="Left" Margin="223,239,0,0" VerticalAlignment="Top" Width="75" Height="22" Click="BtClick_Login"/>

    </Grid>
</Window>
